<Window x:Class="AutoSalon.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Автосалон" Height="520" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <TabControl>
            <TabItem Header="Производители">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- верхняя панель -->
                    <DockPanel Grid.Row="0" LastChildFill="True">
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                            <Button x:Name="BtnAddMan" Content="Добавить" Width="100" Margin="0,0,8,0" Click="AddManufacturer_Click"/>
                            <Button x:Name="BtnEditMan" Content="Изменить" Width="100" Margin="0,0,8,0" Click="EditManufacturer_Click"/>
                            <Button x:Name="BtnDelMan" Content="Удалить" Width="100" Click="DeleteManufacturer_Click"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox x:Name="ManSearchBox" Width="220" TextChanged="ManufacturerSearch_TextChanged"/>
                        </StackPanel>
                    </DockPanel>

                    <!-- таблица -->
                    <DataGrid x:Name="ManGrid" Grid.Row="1" Margin="0,10,0,10"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ManufacturerId}" Width="60"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Страна" Binding="{Binding Country}" Width="160"/>
                            <DataGridTextColumn Header="Сайт" Binding="{Binding Website}" Width="220"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- низ -->
                    <DockPanel Grid.Row="2">
                        <TextBlock x:Name="ManCountText" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ManEmptyText" DockPanel.Dock="Right" VerticalAlignment="Center" Foreground="DarkRed"/>
                    </DockPanel>
                </Grid>
            </TabItem>

            <!-- Дальше: Марки, Автомобили (добавим после того, как это заработает) -->
        </TabControl>
    </Grid>
</Window>
